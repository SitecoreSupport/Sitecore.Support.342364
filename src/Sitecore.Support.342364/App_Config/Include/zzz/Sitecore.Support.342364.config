<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/" >
    <sitecore role:require="ContentDelivery">
        <settings>
            <setting name="Sitecore.Support.CommercePublishCacheRefresh.TargetDatabase" value="web"/>
        </settings>
        <events>
            <event name="publish:end:remote">
                <handler patch:instead="*[@type='Sitecore.Commerce.Engine.Connect.Events.CommercePublishCacheRefresh, Sitecore.Commerce.Engine.Connect']" type="Sitecore.Support.Commerce.Engine.Connect.Events.CommercePublishCacheRefresh, Sitecore.Support.342364" method="ClearCache" />
            </event>
        </events>
    </sitecore>
</configuration>